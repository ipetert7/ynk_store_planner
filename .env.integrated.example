# Integrated deployment environment (production-like)
# Copy to `.env` and replace every placeholder value.

ENVIRONMENT=prod

# Flask/main app
SECRET_KEY=replace-with-strong-secret
AUTO_REGENERATE=true
CHECK_INTERVAL=300
SSO_TOKEN_TTL=900
SSO_REFRESH_TTL=28800

# Shared SSO secrets (must match between both services)
SSO_SECRET=replace-with-shared-sso-secret
SSO_SYNC_SECRET=replace-with-shared-sso-sync-secret

# Next.js arriendos app
NEXTAUTH_URL=http://192.168.18.155/arriendos
NEXTAUTH_SECRET=replace-with-nextauth-secret
DATABASE_URL=file:./prisma/dev.db
BACKUP_DIR=/app/backups
SSO_SYNC_URL=http://ynk-main:8000/api/sso/users
