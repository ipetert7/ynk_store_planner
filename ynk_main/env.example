# Configuración de YNK Modelo
# Copia este archivo a .env y ajusta los valores según tu entorno

# Ambiente: local o prod
ENVIRONMENT=local

# Puerto del servidor Flask
PORT=8000

# Secret key para Flask (cambiar en producción)
# Generar con: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=ynk-dev-secret-key-change-in-production

# Auto-regeneración de reportes cuando cambian los archivos Excel
AUTO_REGENERATE=true

# Intervalo de verificación de cambios (segundos)
# Solo aplica en modo producción
CHECK_INTERVAL=300

# Directorio de logs (relativo al proyecto)
LOG_DIR=logs

# SSO para integración con módulo de arriendos
SSO_SECRET=ynk-dev-sso-secret-change-in-production
SSO_TOKEN_TTL=900
SSO_REFRESH_TTL=28800
SSO_SYNC_SECRET=ynk-dev-sso-sync-secret-change-in-production
